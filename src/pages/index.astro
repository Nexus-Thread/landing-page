---
import '../theme/colors.css'
import '../theme/fonts.css'
---

<section
  style="background: var(--color-nexus-background); height: 100vh; width: 100vw; margin: 0; display: flex; flex-direction: column; align-items: center; justify-content: center; text-align: center; padding: 0 2rem; font-family: var(--font-family);"
>
  <h1
    style="font-size: var(--font-size-56); font-weight: var(--font-weight-600); color: var(--color-nexus-primary); margin-bottom: 1rem;"
  >
    Nexus Thread
  </h1>
  <p
    style="font-size: var(--font-size-20); color: var(--color-nexus-accent); font-weight: var(--font-weight-500); margin-bottom: 2rem;"
  >
    Where Leadership Drives Excellence.
  </p>
  <a
    href="/about"
    style="display: inline-block; padding: 0.75rem 2rem; background: var(--color-nexus-primary); color: var(--color-white); border-radius: 2rem; font-weight: var(--font-weight-600); font-size: var(--font-size-18); text-decoration: none; box-shadow: 0 2px 8px rgba(0,0,0,0.08); transition: background 0.2s;"
  >
    Learn More
  </a>
</section>
